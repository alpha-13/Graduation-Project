<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mohamedelsayed.icontrol.alarm"
    android:orientation="vertical">
    <TextClock
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"/>

    <TimePicker
        android:id="@+id/TPicker"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="5dp"
        android:timePickerMode="spinner" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">
    <CheckBox
        android:id="@+id/CBCafe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open Cafe"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"/>
    <CheckBox
        android:id="@+id/CBWindow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open Window"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnConfirmAlarm"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Confirm"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btnCancelAlarm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Cancel"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
